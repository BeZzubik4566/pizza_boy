import telebot
from telebot import types

bot = telebot.TeleBot('7881652613:AAFFTCcxQqI15GzIYjnzubku__nTE9dZxy0')
user=5

pizza=''
@bot.message_handler(commands=['start'])
def main(message):
    markup=types.InlineKeyboardMarkup()
    btn1=types.InlineKeyboardButton('peperoni',callback_data='peperoni')
    btn2=types.InlineKeyboardButton('margarita',callback_data='margarita')
    btn3=types.InlineKeyboardButton('four_cheeses',callback_data='four_cheeses')
    btn4=types.InlineKeyboardButton('chicken_cheese',callback_data='chicken_cheese')
    markup.row(btn1,btn2,btn3);
    markup.row(btn4)
    file=open('C:\\Users\\Asus\\Desktop\\zxc_bot\\pizza.jpg','rb')
    bot.send_photo(message.chat.id, file)
    bot.send_message(message.chat.id,'–ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ,–≤—ã–±–µ—Ä–µ—Ç–µ—Ç–µ –ø–æ–∂–∞–ª—É–π—Å—Ç–∞ –ø–∏—Ü—Ü—É –∫–æ—Ç–æ—Ä—É—é –≤—ã —Ö–æ—Ç–∏—Ç–µ –∑–∞–∫–∞–∑–∞—Ç—å',reply_markup=markup)
    bot.register_next_step_handler(message,order)

@bot.callback_query_handler(func=lambda call: True)
def callback_inline(call):
    global pizza
    pizza=call.data
    if call.data == 'peperoni':
        bot.send_message(call.message.chat.id, 'üçï–í—ã –≤—ã–±—Ä–∞–ª–∏ peperoni')
    elif call.data == 'margarita':
        bot.send_message(call.message.chat.id, 'üçï–í—ã –≤—ã–±—Ä–∞–ª–∏ margarita')
    elif call.data == 'four_cheeses':
        bot.send_message(call.message.chat.id, 'üçï–í—ã –≤—ã–±—Ä–∞–ª–∏ four_cheeses')
    elif call.data == 'chicken_cheese':
        bot.send_message(call.message.chat.id, 'üçï–í—ã –≤—ã–±—Ä–∞–ª–∏ chicken_cheese')
    
    bot.send_message(call.message.chat.id,'–ü–æ–∂–∞–ª—É–π—Å—Ç–∞,–≤—ã–±–µ—Ä–∏—Ç–µ —Ä–∞–∑–º–µ—Ä –ø–∏—Ü—Ü—ã –∏ –∞–¥—Ä–µ—Å –¥–æ—Å—Ç–∞–≤–∫–∏')
    bot.register_next_step_handler(call.message,order)

def order(message):
    bot.send_message(message.chat.id,'–û–∂–∏–¥–∞–π—Ç–µ')
    bot.send_message(user,f'–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å {message.from_user.username} –∑–∞–∫–∞–∑–∞–ª {pizza} {message.text}')


bot.polling(none_stop=True, interval=0)
